  "compilerOptions": {
    "outDir": ".",
    "rootDir": ".",
    "module": "commonjs",
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [ "node_modules", "libs" ]
}